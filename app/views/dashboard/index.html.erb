<%= render partial: "shared/header" %>

<hr>

<div class="row">
  <div class="col-sm-7">
    <h5>
      Items Ready to Ship
    </h5>
    <br>
    <% @merchant.unshipped_items.each_with_index do |invoice_item, index| %>
      <div id="id-<%= index %>">
        <%= invoice_item.item.name %>
        - Invoice #<%= link_to invoice_item.invoice.id, merchant_invoice_path(@merchant,invoice_item.invoice) %>
        -<%= invoice_item.invoice.created_at.strftime("%A, %b %d %Y") %>
      </div>
    <% end %>
  </div>

  <div class="col-sm-4">
    <h5>
      My 5 Fave Customers
    </h5>
    <br>
    <% @merchant.fave_customers.each_with_index do |customer, index| %>
      <div id="id-<%= customer.id %>">
        <%= index+1 %>.
        <%= customer.first_name %>
        <%= customer.last_name %>
        -
        <%= customer.transaction_total %>
        purchases
      <% end %>
    </div>
  </div>
</div>

<%= link_to "My Discounts", merchant_bulk_discounts_path(@merchant) %>
